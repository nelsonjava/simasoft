<?xml version="1.0" encoding="utf-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

	<persistence-unit name="sima-PU" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>

		<class>org.hibernate.ogm.hiking.model.Hike</class>
		<class>org.hibernate.ogm.hiking.model.Person</class>

<!--
		<class>com.simavirtual.models.contab.Movimientos</class>
		<class>com.simavirtual.models.contab.Pucs</class>
		<class>com.simavirtual.models.contab.Saldos</class>
		<class>com.simavirtual.models.contab.Terceros</class>
-->

		<properties>
			<property name="hibernate.ogm.datastore.provider" value="mongodb" />
			<property name="hibernate.ogm.datastore.database" value="HikeDB" />
		</properties>
	</persistence-unit>

	<persistence-unit name="sima-PU-JTA" transaction-type="JTA">
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>

<!--
		<class>com.simavirtual.models.contab.Movimientos</class>
		<class>com.simavirtual.models.contab.Pucs</class>
		<class>com.simavirtual.models.contab.Saldos</class>
		<class>com.simavirtual.models.contab.Terceros</class>
-->

		<properties>
			<property name="hibernate.ogm.datastore.provider" value="mongodb" />
			<property name="hibernate.ogm.datastore.database" value="HikeDB" />
		</properties>
	</persistence-unit>
</persistence>
